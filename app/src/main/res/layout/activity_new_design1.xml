<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_design_1">

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_image" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:srcCompat="@drawable/rectangle_12" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_extrabold"
        android:text="New Design."
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="@id/imageView27"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@id/imageView27"
        app:layout_constraintEnd_toEndOf="@id/imageView27"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="@id/imageView27"
        app:layout_constraintEnd_toEndOf="@id/imageView27"
        app:layout_constraintTop_toBottomOf="@id/textView36"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="110dp"
        android:layout_marginTop="30dp"
        android:text="View in AR."
        android:background="@drawable/edit_text_bg"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/imageView27"
        app:layout_constraintTop_toBottomOf="@id/recyclerView4"
        app:layout_constraintEnd_toEndOf="@id/imageView27"/>

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Feedback"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/button9"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="@id/imageView27"
        app:layout_constraintEnd_toEndOf="@id/imageView27"
         />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="On this Design?"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/textView40"
        app:layout_constraintStart_toStartOf="@id/imageView27"
        app:layout_constraintEnd_toEndOf="@id/imageView27"

         />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_marginHorizontal="40dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_801"
        app:layout_constraintStart_toStartOf="@id/imageView27"
        app:layout_constraintTop_toBottomOf="@id/textView41"
        app:layout_constraintEnd_toEndOf="@id/imageView27"/>

</androidx.constraintlayout.widget.ConstraintLayout>