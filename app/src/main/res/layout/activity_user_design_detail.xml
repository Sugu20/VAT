<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDesignDetail">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_image" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_12" />

    <TextView
        android:id="@+id/text25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="Design Description."
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/imageView5"
        app:layout_constraintStart_toStartOf="@id/imageView5"
        app:layout_constraintTop_toTopOf="@id/imageView5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView5"
        app:layout_constraintTop_toBottomOf="@id/text25"
        app:layout_constraintStart_toStartOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="@id/imageView5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/recycleview4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/text26" />

            <TextView
                android:id="@+id/text26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/inter_medium"
                android:text="Sample Design.(Optional)"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="@id/scrollable"
                />


            <TextView
                android:id="@+id/text27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Description of Design."
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@id/recycleview4" />

            <EditText
                android:id="@+id/editTextTextMultiLine2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_84"
                android:ems="10"
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@id/text27" />
            <TextView
                android:id="@+id/Text28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintTop_toBottomOf="@id/editTextTextMultiLine2"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@id/Text28"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/scrollable"
                app:layout_constraintEnd_toEndOf="@+id/scrollable"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/rectangle_84"
                app:layout_constraintTop_toBottomOf="@id/statusText"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="@id/scrollable"
                app:layout_constraintEnd_toEndOf="@id/scrollable"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="95dp"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="View in AR"
                android:textColorLink="#303C53"
                app:layout_constraintTop_toBottomOf="@id/image2"
                app:layout_constraintStart_toStartOf="@id/scrollable"
                app:layout_constraintEnd_toEndOf="@id/scrollable"/>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="80dp"
                app:layout_constraintEnd_toEndOf="@id/scrollable"
                app:layout_constraintStart_toStartOf="@id/scrollable"
                tools:layout_editor_absoluteY="995dp"
                app:layout_constraintTop_toBottomOf="@id/button7">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:text="Accept"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:text="Reject"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/homebutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="200dp"
                app:layout_constraintTop_toBottomOf="@id/linear1"
                app:layout_constraintStart_toStartOf="@id/scrollable"
                app:layout_constraintEnd_toEndOf="@id/scrollable">

                <ImageButton
                    android:id="@+id/imageView22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="Home button"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/baseline_home_24"
                    />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatMultiAutoCompleteTextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@id/linear1"
                android:layout_marginTop="40dp"
                android:background="@drawable/rectangle_84"
                android:visibility="gone"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="@id/scrollable"
                app:layout_constraintEnd_toEndOf="@id/scrollable"
                android:layout_marginHorizontal="30dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="95dp"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Submit."
                android:textColorLink="#303C53"
                app:layout_constraintStart_toStartOf="@id/scrollable"
                app:layout_constraintEnd_toEndOf="@id/scrollable"
                app:layout_constraintTop_toBottomOf="@id/linear1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>