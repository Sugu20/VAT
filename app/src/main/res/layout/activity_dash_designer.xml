<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dash_bg_image">
<ImageView
android:id="@+id/imageView2"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:alpha="0.5"
android:scaleType="fitXY"
app:srcCompat="@drawable/bg_image" />


<TextView
android:id="@+id/txtNewDesign"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="10dp"
android:layout_marginTop="16dp"
android:fontFamily="@font/inter_extrabold"
android:text="Upload New Design."
android:gravity="center"
android:textAlignment="center"
android:padding="43dp"
android:textColor="#FFFFFF"
android:background="@drawable/edit_text_bg"
android:textSize="48sp"
app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/designers_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:fontFamily="@font/inter_extrabold"
        android:gravity="center"
        android:padding="43dp"
        android:text="Designer's Previous Upload."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/l1" />

    <TextView
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Profile."
        android:padding="63dp"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNewDesign" />




</androidx.constraintlayout.widget.ConstraintLayout>